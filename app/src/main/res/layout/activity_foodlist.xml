<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

<LinearLayout
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:layout_marginTop="120dp"
    android:background="@color/lightGray">

    <LinearLayout
        android:gravity="center"
        android:orientation="horizontal"
        android:layout_weight="1"
        android:layout_width="wrap_content"
        android:layout_height="0dp">

        <Button
            android:layout_width="110dp"
            android:layout_height="110dp"
            android:layout_marginLeft="50dp"
            android:layout_marginTop="20dp"
            android:background="@drawable/et11" />


        <Button
            android:layout_width="110dp"
            android:layout_height="110dp"
            android:layout_marginLeft="50dp"
            android:layout_marginTop="20dp"
            android:background="@drawable/tavuk11" />
    </LinearLayout>

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="0dp"
        android:layout_weight="1"
        android:gravity="center"
        android:orientation="horizontal">

        <Button
            android:layout_width="110dp"
            android:layout_height="110dp"
            android:layout_marginLeft="50dp"
            android:layout_marginTop="0dp"
            android:background="@drawable/balik11" />

        <Button
            android:layout_width="110dp"
            android:layout_height="110dp"
            android:layout_marginLeft="50dp"
            android:layout_marginTop="0dp"
            android:background="@drawable/salata11" />
    </LinearLayout>

    <LinearLayout
        android:gravity="center"
        android:orientation="horizontal"
        android:layout_weight="1"
        android:layout_width="wrap_content"
        android:layout_height="0dp">
        <Button
            android:layout_marginTop="0dp"
            android:layout_marginLeft="50dp"
            android:layout_marginBottom="3dp"
            android:background="@drawable/pizza11"
            android:layout_width="110dp"
            android:layout_height="110dp" />

        <Button
            android:layout_width="110dp"
            android:layout_height="110dp"
            android:layout_marginBottom="3dp"
            android:layout_marginLeft="50dp"
            android:layout_marginTop="0dp"
            android:background="@drawable/tatli11" />
    </LinearLayout>

<Button
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:text="Ayrıntılı arama için tıklayınız"
    android:background="@color/colorGreen"/>
</LinearLayout>
<ImageView
    android:layout_width="match_parent"
    android:layout_height="140dp"
    android:background="@drawable/yemek11"
    android:layout_marginBottom="0dp"
    android:layout_marginTop="0dp"/>

</RelativeLayout>